{% extends 'layout/base.html.twig' %}

{% block content %}
<div class="container py-10 w-full min-h-screen">
    {# Welcome Section #}
    <div class="mb-8">
        <h1 class="text-xl sm:text-xl md:text-2xl font-extrabold text-white mb-2">
            Welcome back, <span class="text-indigo-400" id="user-name">User</span> ðŸ‘‹
        </h1>
        <p class="text-sm sm:text-base text-gray-400 max-w-xl">
            Quick summary of your tickets and actions to help you stay on top of your work.
        </p>
    </div>

    {# Stats Grid #}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-8 sm:mb-12" id="stats-grid">
        {# Loading placeholder #}
        <div class="bg-white rounded-xl p-6 animate-pulse"><div class="h-20 bg-gray-200 rounded"></div></div>
        <div class="bg-white rounded-xl p-6 animate-pulse"><div class="h-20 bg-gray-200 rounded"></div></div>
        <div class="bg-white rounded-xl p-6 animate-pulse"><div class="h-20 bg-gray-200 rounded"></div></div>
        <div class="bg-white rounded-xl p-6 animate-pulse"><div class="h-20 bg-gray-200 rounded"></div></div>
    </div>

    {# Quick Actions #}
    <div class="mt-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
            <button onclick="createQuickTicket()" class="group flex flex-col items-start gap-3 p-4 rounded-xl bg-gradient-to-br from-indigo-600 to-violet-600 text-white shadow-lg hover:scale-[1.02] transition">
                <div class="p-2 bg-white/10 rounded-md">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                </div>
                <div><h3 class="text-base font-semibold">Create Ticket</h3><p class="text-sm opacity-85">Create a new ticket instantly</p></div>
            </button>

            <a href="/tickets" class="group flex flex-col items-start gap-3 p-4 rounded-xl bg-white/5 text-white border border-white/5 hover:bg-white/10 transition">
                <div class="p-2 bg-white/5 rounded-md">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                </div>
                <div><h3 class="text-base font-semibold">All Tickets</h3><p class="text-sm opacity-85">Browse and manage tickets</p></div>
            </a>

            <button onclick="addDemoTicket()" class="group flex flex-col items-start gap-3 p-4 rounded-xl bg-emerald-600 text-white shadow hover:bg-emerald-700 transition">
                <div class="p-2 bg-white/10 rounded-md">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>
                <div><h3 class="text-base font-semibold">Add Demo</h3><p class="text-sm opacity-85">Create a quick demo ticket</p></div>
            </button>

            <button onclick="exportDemo()" class="group flex flex-col items-start gap-3 p-4 rounded-xl bg-slate-800 text-white border border-white/5 hover:bg-slate-700 transition">
                <div class="p-2 bg-white/5 rounded-md">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                </div>
                <div><h3 class="text-base font-semibold">Export Demo</h3><p class="text-sm opacity-85">Download demo tickets CSV</p></div>
            </button>
        </div>
    </div>

    {# Recent Activity #}
    <div class="mt-8 sm:mt-12">
        <h2 class="text-xl sm:text-2xl font-bold text-white mb-4 sm:mb-6">Recent Activity</h2>
        <div class="bg-white/5 rounded-lg p-4 sm:p-6" id="recent-activity">
            <p class="text-gray-400 text-center py-6">Loading...</p>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
(function() {
    const store = window.ticketStore;
    if (!store) {
        console.error('Store not loaded!');
        return;
    }

    const state = store.getState();
    if (!state.isAuthenticated) {
        window.location.href = '/auth/login';
        return;
    }

    function renderDashboard() {
        const state = store.getState();
        const stats = store.getStats();
        document.getElementById('user-name').textContent = state.user?.name || 'User';
        
        const statsHTML = `
            <div class="bg-white rounded-xl p-6 shadow-lg">
                <div class="flex items-center justify-between">
                    <div><p class="text-sm font-semibold text-indigo-600">Total Tickets</p><p class="text-3xl font-bold text-gray-900 mt-2">${stats.total}</p></div>
                    <div class="p-3 bg-gradient-to-br from-indigo-500 to-violet-600 rounded-lg"><svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg></div>
                </div>
            </div>
            <div class="bg-white rounded-xl p-6 shadow-lg">
                <div class="flex items-center justify-between">
                    <div><p class="text-sm font-semibold text-emerald-600">Open Tickets</p><p class="text-3xl font-bold text-gray-900 mt-2">${stats.open}</p></div>
                    <div class="p-3 bg-gradient-to-br from-emerald-400 to-green-600 rounded-lg"><svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg></div>
                </div>
            </div>
            <div class="bg-white rounded-xl p-6 shadow-lg">
                <div class="flex items-center justify-between">
                    <div><p class="text-sm font-semibold text-amber-600">In Progress</p><p class="text-3xl font-bold text-gray-900 mt-2">${stats.inProgress}</p></div>
                    <div class="p-3 bg-gradient-to-br from-amber-400 to-amber-600 rounded-lg"><svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg></div>
                </div>
            </div>
            <div class="bg-white rounded-xl p-6 shadow-lg">
                <div class="flex items-center justify-between">
                    <div><p class="text-sm font-semibold text-slate-600">Closed Tickets</p><p class="text-3xl font-bold text-gray-900 mt-2">${stats.closed}</p></div>
                    <div class="p-3 bg-gradient-to-br from-slate-400 to-slate-600 rounded-lg"><svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg></div>
                </div>
            </div>
        `;
        document.getElementById('stats-grid').innerHTML = statsHTML;
        document.getElementById('recent-activity').innerHTML = stats.total === 0 
            ? '<p class="text-gray-400 text-center py-8">No tickets yet. Create one to get started!</p>'
            : `<p class="text-gray-400">You have ${stats.open} open tickets that need attention.</p>`;
    }

    window.createQuickTicket = async function() {
        await store.createTicket({ title: 'New ticket', description: '', status: 'open', priority: 'medium' });
        window.location.href = '/tickets';
    };

    window.addDemoTicket = async function() {
        await store.createTicket({ title: 'Demo: Urgent UI bug', description: 'Demo ticket', status: 'open', priority: 'high' });
        renderDashboard();
    };

    window.exportDemo = function() {
        const csv = 'id,title,status\n' + store.getState().tickets.map(t => `${t.id},${t.title},${t.status}`).join('\n');
        const blob = new Blob([csv], { type: 'text/csv' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'tickets.csv';
        a.click();
    };

    store.subscribe(renderDashboard);
    renderDashboard();
})();
</script>
{% endblock %}
